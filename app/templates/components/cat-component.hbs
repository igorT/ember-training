{{#if isEditing}}
  {{input value=cat.name}}
  <button {{action 'save' cat}}>Update</button>
{{else}}
  {{#link-to 'cat' cat}}
    <h2>{{cat.name}}</h2>
  {{/link-to}}
  <div>owned by<h3>{{cat.ownerName}}</h3></div>
  <button {{action 'edit' cat}}>Edit</button>
{{/if}}
<button {{action 'delete' cat}}>Remove {{cat.name}}</button>
<img {{bind-attr src=cat.image}} style="height:250px">
{{#if hasFriends}}
  <h3> Friends: </h3>
  {{#each cat.catFriends}}
    I am friends with: {{name}}
  {{/each}}
{{/if}}
